<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/view"
    android:background="@drawable/sandshrew2" >

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/title" 
        android:id="@+id/theTitle"
        android:textSize="55dp"
        android:typeface="sans"
        android:padding="10dip"
        android:textColor="#000000"/>
   
   <TextView
       	android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statusMsg"
        android:padding="5dip"
        android:textSize="30dp"
        android:textColor="#000000"
         />
   <ImageView
       android:gravity="center_horizontal"
       android:layout_width="fill_parent"
       android:layout_height="150dp"
       android:contentDescription="@string/lightdesc"
       android:src="@drawable/greenlight" 
       android:id="@+id/lightImage" />  
   
   <TextView
       	android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/theAge"
        android:textSize="30dp"
        android:typeface="sans"
        android:textColor="#000000"/>
   
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageNumber"
        android:textSize="60dp"
        android:typeface="sans"
        android:gravity="center_horizontal"
        android:textColor="#000000"
         />
     
     <TextView
       	android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expireMsg"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
         />
   

</LinearLayout>